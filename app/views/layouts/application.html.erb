<!-- views/layouts/application.mobile.erb -->

<!DOCTYPE html>
<html>
<head>
	<title>Jqmoblog</title>
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.css" />
	<link rel="stylesheet" href="/stylesheets/jquery.notifyBar.css" />
	<%= javascript_include_tag :defaults %>
	<script src="http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.js"></script>
	<%= csrf_meta_tag %>
</head>
<body>  
	<div data-role="page"> 
		<div data-role="header">
			<h1><%= @title || 'Mobile App' %></h1>
			<% unless user_signed_in? %>
			<%= link_to 'Sign In', new_user_session_path, "class" => "ui-btn-right" %>
			<%= link_to 'Sign Up', new_user_registration_path, "class" => "ui-btn-left" %>
			<% else %>
			<%= link_to 'Sign Out', destroy_user_session_path, :method => :delete,  "class" => "ui-btn-right" %>
			<% end %>
		</div>

<%= render(:partial => "layouts/messages.html") %> 

		<%= yield %>

	</div>
</body>
</html>


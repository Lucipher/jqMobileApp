<!-- views/layouts/application.mobile.erb -->

<!DOCTYPE html>
<html>
<head>
	<title>Jqmoblog</title>
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.css" />
	<link rel="stylesheet" href="/stylesheets/jquery.mobile.alert.css" />
	<%= javascript_include_tag :defaults %>
	<script src="http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.js"></script>
	<%= csrf_meta_tag %>
</head>
<body>  
	<div data-role="page"> 
		<div data-role="header">
			<h1><%= @title || 'Mobile App' %></h1>
			<% unless user_signed_in? %>
			<%= link_to 'Sign In', new_user_session_path, "class" => "ui-btn-right" %>
			<% else %>
			<%= button_to 'Log Out', destroy_user_session_path, :method => :delete, :confirm => "Are you sure"  %>
			<% end %>
		</div>

		<% flash.each do |name, msg| %>
		<% if msg.is_a?(String) %>
		<%= content_tag :div, msg, :id => "flash_#{name}", :class => "ui-body ui-body-e" %>
		<% end %>    
		<% end %>

		<%= yield %>

	</div>
</body>
</html>

